<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".watchdetails.ui.WatchDetailsFragment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:paddingHorizontal="16dp"
        >
            <TextView
                android:id="@+id/feed_item_description_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/details_mock_title"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/fragment_feed_item_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="4dp"
                android:text="@string/mock_date"
                android:textColor="@color/black"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/feed_item_description_text" />

            <ImageView
                android:id="@+id/fragment_feed_item_image"
                android:layout_width="match_parent"
                android:layout_height="202dp"
                android:src="@drawable/ic_no_image"
                android:contentDescription="@string/mock_description"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fragment_feed_item_date" />

            <TextView
                android:id="@+id/fragment_feed_item_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxWidth="600dp"
                android:text="@string/details_mock_content"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/fragment_feed_item_image" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/fragment_feed_item_open_original_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="35dp"
                android:text="@string/details_open_original"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fragment_feed_item_content" />


        </LinearLayout>

</ScrollView>