<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".watchdetails.ui.NewsDetailsFragment">

    <ScrollView
        android:id="@+id/details_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="UselessParent">

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        >
            <TextView
                android:id="@+id/feed_item_description_text"
                android:layout_marginHorizontal="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/details_mock_title"
                style="@style/TextAppearance.RSSReader.HeaderText"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/fragment_feed_item_date"
                android:layout_marginHorizontal="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/mock_date"
                style="@style/TextAppearance.RSSReader.DateText"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/feed_item_description_text" />

            <ImageView
                android:id="@+id/fragment_feed_item_image"
                android:layout_width="match_parent"
                android:layout_height="202dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_no_image"
                android:contentDescription="@string/mock_description"
                android:layout_marginTop="14dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fragment_feed_item_date" />

            <TextView
                android:id="@+id/fragment_feed_item_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/details_mock_content"
                style="@style/TextAppearance.RSSReader.ContentText"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/fragment_feed_item_image" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/fragment_feed_item_open_original_button"
                android:layout_marginHorizontal="16dp"
                style="@style/Widget.RSSReader.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="26dp"
                android:text="@string/details_open_original"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fragment_feed_item_content" />


        </LinearLayout>

    </ScrollView>

    <include
        android:id="@+id/loader"
        layout="@layout/fragment_watch_feeds_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</FrameLayout>