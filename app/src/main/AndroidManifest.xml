<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.RSSReader"
        tools:targetApi="31">
        <activity
            android:name=".FeedItemActivity"
            android:label="Feed item"
            android:parentActivityName=".FeedActivityMain"
            android:exported="false" />
        <activity
            android:name=".AddRssActivity"
            android:label="Add RSS"
            android:parentActivityName=".FeedActivityMain"
            android:exported="false" />
        <activity
            android:name=".FeedActivityMain"
            android:label="RSS Feed"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>